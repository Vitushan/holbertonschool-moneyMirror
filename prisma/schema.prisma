// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  piggybanks   Piggybank[]

  @@map("users")
}

model Transaction {
  id String @id @default(cuid())
  userId String
  amount Float
  type String //"income" or "expense""
  category String
  date DateTime @default(now())
  note String?
  currency String
  description String?

  user User @relation(fields: [userId], references: [id])

  @@map("transactions")
}

model Piggybank {
  id                 String   @id @default(cuid())
  userId             String
  name               String
  category           String   // "voyage", "addiction", "console", etc.
  emoji              String   // Emoji de la catégorie
  targetAmount       Float    // Montant objectif
  currentAmount      Float    @default(0) // Montant actuel
  isAutomatic        Boolean  @default(false) // Mode automatique ou manuel
  autoPercentage     Float?   // Pourcentage automatique (si mode auto)
  linkedPiggybankId  String?  // ID de la tirelire liée (addiction → voyage)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("piggybanks")
}